<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %5p | %t | %-55logger{55} | %m %n</pattern>
        </encoder>
    </appender>

    <root>
        <level value="WARN" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>